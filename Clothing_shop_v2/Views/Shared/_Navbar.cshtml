@model Clothing_shop_v2.VModels.Home.HomeVModel
<!-- Navbar Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            @await Html.PartialAsync("_CategoryMenu", Model.Categories)
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">TRANG CHỦ</a>
                        <a asp-controller="Shop" asp-action="Index" class="nav-item nav-link">SẢN PHẨM</a>
                        @* <a asp-controller="Shop" asp-action="Detail" class="nav-item nav-link">Shop Detail</a> *@
                        @* <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Cart" asp-action="Index" class="dropdown-item">Shopping Cart</a>
                                <a asp-controller="Checkout" asp-action="Index" class="dropdown-item">Checkout</a>
                            </div>
                        </div> *@
                        <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link">TIN TỨC</a>
                        <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link">MIX & MATCH</a>
                        <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link">LIÊN HỆ</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Hi, @User.Identity.Name
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" asp-action="Profile" >Tài Khoản</a>
                                    <a class="dropdown-item" asp-action="Logout" >Đăng Xuất</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <a asp-action="Login" class="nav-item nav-link">ĐĂNG NHẬP</a>
                        }
                    </div>
                </div>
            </nav>
            @await Html.PartialAsync("_BannerCarousel", Model.Banners)
        </div>
    </div>
</div>
<!-- Navbar End -->
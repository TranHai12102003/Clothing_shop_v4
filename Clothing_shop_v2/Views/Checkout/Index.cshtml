    <script>
        $(document).ready(function () {
            // Xử lý khi checkbox "Gửi đến địa chỉ khác" thay đổi
            $('#shipto').change(function () {
                var isChecked = $(this).is(':checked');

                if (isChecked) {
                    // Bật required cho các trường shipping
                    $('#ShippingFullName').prop('required', true);
                    $('#ShippingEmail').prop('required', true);
                    $('#ShippingPhoneNumber').prop('required', true);
                    $('#ShippingAddress').prop('required', true);

                    // Bật required cho các select địa chỉ
                    $('.shipping-required').prop('required', true);

                    // Enable các select
                    $('#province').prop('disabled', false);
                } else {
                    // Tắt required cho các trường shipping
                    $('#ShippingFullName').prop('required', false);
                    $('#ShippingEmail').prop('required', false);
                    $('#ShippingPhoneNumber').prop('required', false);
                    $('#ShippingAddress').prop('required', false);

                    // Tắt required cho các select địa chỉ
                    $('.shipping-required').prop('required', false);

                    // Reset và disable các select
                    $('#province').val('').prop('disabled', true);
                    $('#district').val('').prop('disabled', true);
                    $('#ward').val('').prop('disabled', true);
                    $('#specificAddress').val('');
                    $('#fullAddress').val('');
                }
            });

            // Khởi tạo trạng thái ban đầu
            if (!$('#shipto').is(':checked')) {
                $('#ShippingFullName').prop('required', false);
                $('#ShippingEmail').prop('required', false);
                $('#ShippingPhoneNumber').prop('required', false);
                $('#ShippingAddress').prop('required', false);
                $('.shipping-required').prop('required', false);
                $('#province').prop('disabled', true);
            }

            // API endpoint - Vietnam Administrative Units
            const API_BASE = 'https://provinces.open-api.vn/api';

            // Load provinces
            loadProvinces();

            function loadProvinces() {
                $.ajax({
                    url: `${API_BASE}/p/`,
                    method: 'GET',
                    success: function (data) {
                        const provinceSelect = $('#province');
                        provinceSelect.empty().append('<option value="">Chọn Tỉnh/Thành phố</option>');
                        data.forEach(function (province) {
                            provinceSelect.append(`<option value="${province.code}" data-name="${province.name}">${province.name}</option>`);
                        });
                    },
                    error: function () {
                        // Sử dụng SweetAlert2 cho thông báo lỗi
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi tải dữ liệu',
                            text: 'Không thể tải danh sách tỉnh/thành phố. Vui lòng thử lại sau.',
                            confirmButtonColor: '#d33',
                            confirmButtonText: 'Đóng'
                        });
                        console.error('Không thể tải danh sách tỉnh/thành phố');
                    }
                });
            }

            // Load districts when province changes
            $('#province').change(function () {
                const provinceCode = $(this).val();
                const districtSelect = $('#district');
                const wardSelect = $('#ward');

                districtSelect.empty().append('<option value="">Chọn Quận/Huyện</option>').prop('disabled', true);
                wardSelect.empty().append('<option value="">Chọn Phường/Xã</option>').prop('disabled', true);

                if (provinceCode) {
                    districtSelect.addClass('loading');
                    $.ajax({
                        url: `${API_BASE}/p/${provinceCode}?depth=2`,
                        method: 'GET',
                        success: function (data) {
                            districtSelect.removeClass('loading').prop('disabled', false);
                            if (data.districts && data.districts.length > 0) {
                                data.districts.forEach(function (district) {
                                    districtSelect.append(`<option value="${district.code}" data-name="${district.name}">${district.name}</option>`);
                                });
                            }
                        },
                        error: function () {
                            districtSelect.removeClass('loading');
                            // Sử dụng SweetAlert2 cho thông báo lỗi
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi tải dữ liệu',
                                text: 'Không thể tải danh sách quận/huyện. Vui lòng thử lại.',
                                confirmButtonColor: '#d33',
                                confirmButtonText: 'Thử lại'
                            });
                            console.error('Không thể tải danh sách quận/huyện');
                        }
                    });
                }
                updateFullAddress();
            });

            // Load wards when district changes
            $('#district').change(function () {
                const districtCode = $(this).val();
                const wardSelect = $('#ward');

                wardSelect.empty().append('<option value="">Chọn Phường/Xã</option>').prop('disabled', true);

                if (districtCode) {
                    wardSelect.addClass('loading');
                    $.ajax({
                        url: `${API_BASE}/d/${districtCode}?depth=2`,
                        method: 'GET',
                        success: function (data) {
                            wardSelect.removeClass('loading').prop('disabled', false);
                            if (data.wards && data.wards.length > 0) {
                                data.wards.forEach(function (ward) {
                                    wardSelect.append(`<option value="${ward.code}" data-name="${ward.name}">${ward.name}</option>`);
                                });
                            }
                        },
                        error: function () {
                            wardSelect.removeClass('loading');
                            // Sử dụng SweetAlert2 cho thông báo lỗi
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi tải dữ liệu',
                                text: 'Không thể tải danh sách phường/xã. Vui lòng thử lại.',
                                confirmButtonColor: '#d33',
                                confirmButtonText: 'Thử lại'
                            });
                            console.error('Không thể tải danh sách phường/xã');
                        }
                    });
                }
                updateFullAddress();
            });

            // Update full address on ward or specific address change
            $('#ward, #specificAddress').on('change keyup', function () {
                updateFullAddress();
            });

            // Function to update full address
            function updateFullAddress() {
                const specificAddress = $('#specificAddress').val().trim();
                const wardName = $('#ward option:selected').data('name') || '';
                const districtName = $('#district option:selected').data('name') || '';
                const provinceName = $('#province option:selected').data('name') || '';

                let fullAddress = '';
                if (specificAddress) {
                    fullAddress += specificAddress;
                }
                if (wardName) {
                    fullAddress += (fullAddress ? ', ' : '') + wardName;
                }
                if (districtName) {
                    fullAddress += (fullAddress ? ', ' : '') + districtName;
                }
                if (provinceName) {
                    fullAddress += (fullAddress ? ', ' : '') + provinceName;
                }

                $('#fullAddress').val(fullAddress);
            }

            // Custom validation for address fields với SweetAlert2
            $('form').submit(function (e) {
                const isShippingEnabled = $('#shipto').is(':checked');

                if (isShippingEnabled) {
                    const province = $('#province').val();
                    const district = $('#district').val();
                    const ward = $('#ward').val();
                    const specificAddress = $('#specificAddress').val().trim();

                    // Kiểm tra từng trường và hiển thị thông báo cụ thể
                    if (!province) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'warning',
                            title: 'Thông tin chưa đầy đủ',
                            text: 'Vui lòng chọn Tỉnh/Thành phố cho địa chỉ giao hàng.',
                            confirmButtonColor: '#ffc107',
                            confirmButtonText: 'Đồng ý',
                            focusConfirm: false,
                            willClose: () => {
                                $('#province').focus();
                            }
                        });
                        return false;
                    }

                    if (!district) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'warning',
                            title: 'Thông tin chưa đầy đủ',
                            text: 'Vui lòng chọn Quận/Huyện cho địa chỉ giao hàng.',
                            confirmButtonColor: '#ffc107',
                            confirmButtonText: 'Đồng ý',
                            focusConfirm: false,
                            willClose: () => {
                                $('#district').focus();
                            }
                        });
                        return false;
                    }

                    if (!ward) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'warning',
                            title: 'Thông tin chưa đầy đủ',
                            text: 'Vui lòng chọn Phường/Xã cho địa chỉ giao hàng.',
                            confirmButtonColor: '#ffc107',
                            confirmButtonText: 'Đồng ý',
                            focusConfirm: false,
                            willClose: () => {
                                $('#ward').focus();
                            }
                        });
                        return false;
                    }

                    if (!specificAddress) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'warning',
                            title: 'Thông tin chưa đầy đủ',
                            text: 'Vui lòng nhập địa chỉ cụ thể (số nhà, tên đường...).',
                            confirmButtonColor: '#ffc107',
                            confirmButtonText: 'Đồng ý',
                            focusConfirm: false,
                            willClose: () => {
                                $('#specificAddress').focus();
                            }
                        });
                        return false;
                    }

                    updateFullAddress();
                }

                // Kiểm tra phương thức thanh toán
                const paymentMethod = $('input[name="PaymentMethod"]:checked').val();
                if (!paymentMethod) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Chưa chọn phương thức thanh toán',
                        text: 'Vui lòng chọn một phương thức thanh toán để tiếp tục.',
                        confirmButtonColor: '#ffc107',
                        confirmButtonText: 'Đồng ý',
                        focusConfirm: false,
                        willClose: () => {
                            $('input[name="PaymentMethod"]').first().focus();
                        }
                    });
                    return false;
                }

                // Hiển thị loading khi submit
                Swal.fire({
                    title: 'Đang xử lý đơn hàng...',
                    text: 'Vui lòng đợi trong giây lát',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
            });

            // Back to top functionality
            $(window).scroll(function () {
                if ($(this).scrollTop() > 100) {
                    $('.back-to-top').fadeIn('slow');
                } else {
                    $('.back-to-top').fadeOut('slow');
                }
            });

            $('.back-to-top').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 1500, 'easeInOutExpo');
                return false;
            });

            // Dropdown toggle for Bootstrap compatibility
            $('.dropdown-toggle').dropdown();
        });
    </script>


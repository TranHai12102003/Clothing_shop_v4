    <script>
        // Section Management
        function showSection(sectionName) {
            document.querySelectorAll('.profile-sidebar .nav-link').forEach(link => {
                link.classList.remove('active');
            });
            const sections = ['account-section', 'edit-profile-section'];
            const ordersCard = document.querySelector('.card:not([id])');
            sections.forEach(id => {
                const section = document.getElementById(id);
                if (section) section.style.display = 'none';
            });
            if (ordersCard) ordersCard.style.display = 'none';
            if (sectionName === 'account') {
                document.getElementById('account-section').style.display = 'block';
                document.querySelector('[onclick="showSection(\'account\')"]').classList.add('active');
            } else if (sectionName === 'orders') {
                ordersCard.style.display = 'block';
                document.querySelector('[onclick="showSection(\'orders\')"]').classList.add('active');
            } else if (sectionName === 'edit-profile') {
                document.getElementById('edit-profile-section').style.display = 'block';
            } else {
                const section = document.getElementById(sectionName + '-section');
                if (section) section.style.display = 'block';
                const navLink = document.querySelector(`[onclick="showSection('${sectionName}')"]`);
                if (navLink) navLink.classList.add('active');
            }
        }

        // Pre-populate Form and Show Edit Profile
        function showEditProfile() {
            const fullName = document.getElementById('display-fullname').textContent.trim();
            const email = document.getElementById('display-email').textContent.trim();
            const phone = document.getElementById('display-phone').textContent.trim();
            const address = document.getElementById('display-address').textContent.trim();
            const gender = document.getElementById('display-gender').textContent.trim();

            if (fullName !== 'Chưa cập nhật') document.getElementById('fullName').value = fullName;
            if (email !== 'Chưa cập nhật') document.getElementById('email').value = email;
            if (phone !== 'Chưa cập nhật') document.getElementById('phoneNumber').value = phone;
            if (gender === 'Nam') {
                document.getElementById('male').checked = true;
            } else if (gender === 'Nữ') {
                document.getElementById('female').checked = true;
            }

            // Load provinces and pre-populate address
            loadProvinces();
            if (address !== 'Chưa cập nhật') {
                // Parse address (assumes format: "specific address, ward, district, province")
                const addressParts = address.split(',').map(part => part.trim());
                if (addressParts.length === 4) {
                    const [specificAddress, wardName, districtName, provinceName] = addressParts;
                    document.getElementById('specificAddress').value = specificAddress;
                    preselectAddress(provinceName, districtName, wardName);
                } else {
                    // Fallback: set specific address as the entire string
                    document.getElementById('specificAddress').value = address;
                }
            }

            showSection('edit-profile');
        }

        // Update Display Info
        function updateDisplayInfo() {
            const fullName = document.getElementById('fullName').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phoneNumber').value;
            const address = document.getElementById('fullAddress').value;
            const gender = document.querySelector('input[name="Gender"]:checked')?.value;

            document.getElementById('display-fullname').textContent = fullName || 'Chưa cập nhật';
            document.getElementById('display-email').textContent = email || 'Chưa cập nhật';
            document.getElementById('display-phone').textContent = phone || 'Chưa cập nhật';
            document.getElementById('display-address').textContent = address || 'Chưa cập nhật';
            document.getElementById('display-gender').textContent = gender || 'Chưa cập nhật';
            document.querySelector('.username').textContent = fullName || 'Chưa cập nhật';
        }

        // Address API Functions
        const API_BASE = 'https://provinces.open-api.vn/api';

        function loadProvinces() {
            $.ajax({
                url: `${API_BASE}/p/`,
                method: 'GET',
                success: function (data) {
                    const provinceSelect = $('#province');
                    provinceSelect.empty().append('<option value="">Chọn Tỉnh/Thành phố</option>');
                    data.forEach(province => {
                        provinceSelect.append(`<option value="${province.code}" data-name="${province.name}">${province.name}</option>`);
                    });
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Không thể tải danh sách tỉnh/thành phố.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }

        function updateFullAddress() {
            const specificAddress = $('#specificAddress').val().trim();
            const wardName = $('#ward option:selected').data('name') || '';
            const districtName = $('#district option:selected').data('name') || '';
            const provinceName = $('#province option:selected').data('name') || '';
            let fullAddress = '';
            if (specificAddress) fullAddress = specificAddress;
            if (wardName) fullAddress += (fullAddress ? ', ' : '') + wardName;
            if (districtName) fullAddress += (fullAddress ? ', ' : '') + districtName;
            if (provinceName) fullAddress += (fullAddress ? ', ' : '') + provinceName;
            $('#fullAddress').val(fullAddress);
        }

        function preselectAddress(provinceName, districtName, wardName) {
            $.ajax({
                url: `${API_BASE}/p/`,
                method: 'GET',
                success: function (provinces) {
                    const province = provinces.find(p => p.name === provinceName);
                    if (province) {
                        $('#province').val(province.code).trigger('change');
                        $.ajax({
                            url: `${API_BASE}/p/${province.code}?depth=2`,
                            method: 'GET',
                            success: function (data) {
                                const district = data.districts.find(d => d.name === districtName);
                                if (district) {
                                    $('#district').val(district.code).trigger('change');
                                    $.ajax({
                                        url: `${API_BASE}/d/${district.code}?depth=2`,
                                        method: 'GET',
                                        success: function (data) {
                                            const ward = data.wards.find(w => w.name === wardName);
                                            if (ward) {
                                                $('#ward').val(ward.code);
                                            }
                                            updateFullAddress();
                                        }
                                    });
                                }
                            }
                        });
                    }
                }
            });
        }

        // Address API and Form Handling
        $(document).ready(function () {
            // Load districts
            $('#province').on('change', function () {
                const provinceCode = $(this).val();
                const districtSelect = $('#district');
                const wardSelect = $('#ward');
                districtSelect.empty().append('<option value="">Chọn Quận/Huyện</option>').prop('disabled', true);
                wardSelect.empty().append('<option value="">Chọn Phường/Xã</option>').prop('disabled', true);
                if (provinceCode) {
                    districtSelect.addClass('loading');
                    $.ajax({
                        url: `${API_BASE}/p/${provinceCode}?depth=2`,
                        method: 'GET',
                        success: function (data) {
                            districtSelect.removeClass('loading').prop('disabled', false);
                            if (data.districts && data.districts.length > 0) {
                                data.districts.forEach(district => {
                                    districtSelect.append(`<option value="${district.code}" data-name="${district.name}">${district.name}</option>`);
                                });
                            }
                            updateFullAddress();
                        },
                        error: function () {
                            districtSelect.removeClass('loading');
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi',
                                text: 'Không thể tải danh sách quận/huyện.',
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                }
                updateFullAddress();
            });

            // Load wards
            $('#district').on('change', function () {
                const districtCode = $(this).val();
                const wardSelect = $('#ward');
                wardSelect.empty().append('<option value="">Chọn Phường/Xã</option>').prop('disabled', true);
                if (districtCode) {
                    wardSelect.addClass('loading');
                    $.ajax({
                        url: `${API_BASE}/d/${districtCode}?depth=2`,
                        method: 'GET',
                        success: function (data) {
                            wardSelect.removeClass('loading').prop('disabled', false);
                            if (data.wards && data.wards.length > 0) {
                                data.wards.forEach(ward => {
                                    wardSelect.append(`<option value="${ward.code}" data-name="${ward.name}">${ward.name}</option>`);
                                });
                            }
                            updateFullAddress();
                        },
                        error: function () {
                            wardSelect.removeClass('loading');
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi',
                                text: 'Không thể tải danh sách phường/xã.',
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                }
                updateFullAddress();
            });

            // Update full address on ward or specific address change
            $('#ward, #specificAddress').on('change keyup', function () {
                updateFullAddress();
            });

            // Form submission with validation
            $('#editProfileForm').on('submit', function (e) {
                e.preventDefault();
                const province = $('#province').val();
                const district = $('#district').val();
                const ward = $('#ward').val();
                if (!province || !district || !ward) {
                    $('#address-validation').text('Vui lòng chọn đầy đủ thông tin địa chỉ (Tỉnh/Thành phố, Quận/Huyện, Phường/Xã)');
                    Swal.fire({
                        icon: 'warning',
                        title: 'Thiếu thông tin',
                        text: 'Vui lòng chọn đầy đủ thông tin địa chỉ.',
                        confirmButtonText: 'OK'
                    });
                    return false;
                }
                updateFullAddress();
                const formData = $(this).serialize();
                $.ajax({
                    url: '@Url.Action("UpdateUserAjax", "Home")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            updateDisplayInfo();
                            showSection('account');
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Có lỗi xảy ra khi cập nhật thông tin.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });

            // Initialize page
            showSection('orders');
        });
    </script>

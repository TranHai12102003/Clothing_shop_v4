@{
    ViewData["Title"] = "Clothing Shop";
    Layout = "~/Views/Shared/_LayoutAccessDenied.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-purple-600 to-blue-400 min-h-screen">
    <div class="flex flex-col items-center justify-center min-h-screen text-center px-4">
        <!-- Main Content -->
        <div class="max-w-2xl space-y-8 relative">
            <!-- Floating Ghost -->
            <div class="animate-bounce text-8xl mb-8">👻</div>

            <!-- 404 Text -->
            <h1 class="text-9xl font-bold text-white animate-pulse">
                4<span class="text-yellow-300">0</span>4
            </h1>

            <!-- Error Message -->
            <h2 class="text-4xl font-semibold text-white mt-4">
                Oops! Page Lost in Space
            </h2>

            <!-- Description -->
            <p class="text-xl text-white/90 mt-4">
                The page you're looking for seems to have vanished into the digital void.
                Maybe it's hiding or took a wrong turn at the internet.
            </p>

            <!-- Back Button -->
            <div class="mt-10">
                <a href="/" class="inline-block px-8 py-3 text-lg font-medium
                    text-purple-600 bg-white rounded-full transition-all
                    hover:bg-purple-100 hover:scale-105 shadow-lg
                    focus:outline-none focus:ring-2 focus:ring-purple-400">
                    Beam Me Home!
                </a>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -top-20 -left-20 w-24 h-24 bg-white/10 rounded-full"></div>
            <div class="absolute -bottom-20 -right-20 w-32 h-32 bg-yellow-300/20 rounded-full"></div>
            <div class="absolute top-0 right-0 w-16 h-16 bg-white/20 rounded-full"></div>
        </div>
    </div>
</body>
</html>